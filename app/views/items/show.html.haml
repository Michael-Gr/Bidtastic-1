.page-header
  = link_to items_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_item_path(@item), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show item

%dl.dl-horizontal
  %dt Name:
  %dd= @item.name
  %dt Description:
  %dd= @item.description
  %dt Photo:
  %dd= @item.photo_id
  %dt Min bid:
  %dd= @item.min_bid
  %dt Bid increment:
  %dd= @item.bid_increment
  %dt Final bid:
  %dd= @item.final_bid
  %dt Category:
  %dd= @item.category
  %dt User:
  %dd= @item.user
